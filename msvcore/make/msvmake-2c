#       $(COMPILE.cc) -g -o ${OBJECTDIR}/${PROJECTNAME}.o ${PROJECTNAME}.cpp 2>&1 \
#	$(COMPILE.cc) -g -o ${OBJECTDIR}/VString.o

.PHONY: clean

# target clean: delete files
clean:
	rm -f ${PROJECTNAME} ${OBJECTDIR}/out
	for x in ${COMPILEFILES}; do rm ${OBJECTDIR}/$${x##*/}.o; done;
	rmdir ${OBJECTDIR}